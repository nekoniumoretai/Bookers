<h1>Bookers</h1>
<table>

  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td></td>
      <td><%= link_to 'show', book_path(book.id) %></td>
      <td><%= link_to 'edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id),method: :delete,"data-confirm" => "Are You Sure？"  %></td>
    <% end %>
    </tr>
  </tbody>
</table>

<div>
  <%= flash[:alert] %>
</div>

<h1>New book</h1>

<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>errors occurred.
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- form_with部分 -->
<%= form_with model: @new_book do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>