<div>
  <%= flash.now[:notice] %>
</div>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors occurred.
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to 'show', book_path %>
  <%= link_to "Back", books_path %>

<% end %>